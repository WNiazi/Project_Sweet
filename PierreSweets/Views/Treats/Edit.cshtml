@{
  Layout = "_Layout";
}

@model PierreSweets.Models.Treat

<h2>Edit</h2>

<h4>All the flavors for: @Html.DisplayFor(model => model.TreatName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.LabelFor(model => model.TreatName)
  @Html.EditorFor(model => model.TreatName)

   @Html.Label("Select flavor")
   @Html.DropDownList("FlavorId")

  <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Back to treat", "Index")</p>