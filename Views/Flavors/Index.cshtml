@{
  Layout = "_Layout";
}

@using PierreSweets.Models;
@model IEnumerable<PierreSweets.Models.Flavor>;


<h2>Flavor(s) available:
@if (Model.Any())
{
  <ul>
    @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</li>
    }
  </ul>
} 
else
{
  <h3>No Flavors have been added yet!</h3>
}

@if (User.Identity.IsAuthenticated)
{
  <p>@Html.ActionLink("Add new Flavor", "Create")</p>

  <p>@Html.ActionLink("Home", "Index", "Home")</p>
}